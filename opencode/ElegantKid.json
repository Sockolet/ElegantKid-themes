{
  "$schema": "https://opencode.ai/theme.json",
  "name": "ElegantKid",
  "version": "1.0.0",
  "description": "A warm theme with teal-to-coral palette",
  "author": "Sockolet",
  "license": "MIT",
  "defs": {
    "teal": "#3F9AAE",
    "turquoise": "#79C9C5",
    "cream": "#FFE2AF",
    "coral": "#F96E5B",
    "bg": "#1a1f2e",
    "bgPanel": "#2a3a4e",
    "bgElement": "#3a4a5e",
    "textMuted": "#b8a07d",
    "magenta": "#b47a9c",
    "purple": "#9a7ab4",
    "tealLight": "#5fb4c7",
    "creamLight": "#fff0d4",
    "coralLight": "#ff8a7a"
  },
  "theme": {
    "primary": { "dark": "teal", "light": "teal" },
    "secondary": { "dark": "turquoise", "light": "turquoise" },
    "accent": { "dark": "coral", "light": "coral" },
    "error": { "dark": "coral", "light": "coral" },
    "warning": { "dark": "cream", "light": "cream" },
    "success": { "dark": "turquoise", "light": "turquoise" },
    "info": { "dark": "teal", "light": "teal" },
    "text": { "dark": "cream", "light": "bg" },
    "textMuted": { "dark": "textMuted", "light": "textMuted" },
    "background": { "dark": "bg", "light": "creamLight" },
    "backgroundPanel": { "dark": "bgPanel", "light": "cream" },
    "backgroundElement": { "dark": "bgElement", "light": "cream" },
    "border": { "dark": "teal", "light": "teal" },
    "borderActive": { "dark": "turquoise", "light": "turquoise" },
    "borderSubtle": { "dark": "bgPanel", "light": "cream" },
    "diffAdded": { "dark": "turquoise", "light": "turquoise" },
    "diffRemoved": { "dark": "coral", "light": "coral" },
    "diffModified": { "dark": "cream", "light": "cream" },
    "markdownText": { "dark": "cream", "light": "bg" },
    "markdownHeading": { "dark": "teal", "light": "teal" },
    "markdownLink": { "dark": "turquoise", "light": "turquoise" },
    "markdownCode": { "dark": "coral", "light": "coral" },
    "markdownBlockQuote": { "dark": "textMuted", "light": "textMuted" },
    "markdownEmph": { "dark": "cream", "light": "cream" },
    "markdownStrong": { "dark": "cream", "light": "cream" },
    "syntaxComment": { "dark": "tealLight", "light": "tealLight" },
    "syntaxKeyword": { "dark": "teal", "light": "teal" },
    "syntaxFunction": { "dark": "turquoise", "light": "turquoise" },
    "syntaxString": { "dark": "cream", "light": "cream" },
    "syntaxNumber": { "dark": "coral", "light": "coral" },
    "syntaxVariable": { "dark": "cream", "light": "bg" },
    "syntaxType": { "dark": "teal", "light": "teal" },
    "syntaxOperator": { "dark": "coral", "light": "coral" },
    "terminal": {
      "black": { "dark": "bg", "light": "bg" },
      "red": { "dark": "coral", "light": "coral" },
      "green": { "dark": "turquoise", "light": "turquoise" },
      "yellow": { "dark": "cream", "light": "cream" },
      "blue": { "dark": "teal", "light": "teal" },
      "magenta": { "dark": "magenta", "light": "magenta" },
      "cyan": { "dark": "turquoise", "light": "turquoise" },
      "white": { "dark": "cream", "light": "cream" },
      "brightBlack": { "dark": "bgPanel", "light": "bgPanel" },
      "brightRed": { "dark": "coralLight", "light": "coralLight" },
      "brightGreen": { "dark": "turquoise", "light": "turquoise" },
      "brightYellow": { "dark": "creamLight", "light": "creamLight" },
      "brightBlue": { "dark": "tealLight", "light": "tealLight" },
      "brightMagenta": { "dark": "magenta", "light": "magenta" },
      "brightCyan": { "dark": "turquoise", "light": "turquoise" },
      "brightWhite": { "dark": "creamLight", "light": "creamLight" }
    }
  }
}
